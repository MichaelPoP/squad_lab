<body class="container">

  <h1> ADD NEW SQUAD! </h1>

  <form action="/squads" class="form-inline" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="squadname" placeholder="modsquad">
    </div>
    <div class="form-group">
      <label for="mascot">Mascot</label>
      <input type="text" name="mascot" class="form-control" id="squadmascotname" placeholder="rubberduck">
    </div>
    <button type="submit" value="Add" class="btn btn-default">Add Squad</button>
  </form>

  
</body>
